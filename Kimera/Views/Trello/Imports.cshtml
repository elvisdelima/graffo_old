@using Kimera.Business
@model IEnumerable<Kimera.Models.Data>

@{
    ViewBag.Title = "Imports";
}

<div class="cover-container well">
    <h2>Boards</h2>
    <table class="table table-striped table-condensed table-bordered" id="myTable">
        <thead>
            <tr>
                <th class="span1">Date</th>
                <th class="span1">Type</th>
                <th class="span12" style="max-width: 400px">Json</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var data in Model.Where(d => d.DataType == TrelloDataType.Boards))
            {
                <tr>
                    <td class="span1">@data.Date.ToShortDateString()</td>
                    <td class="span1">@data.DataType</td>
                    <td class="span12" style="max-width: 400px">@data.Json</td>
                </tr>
            }
        </tbody>
    </table>
</div>

